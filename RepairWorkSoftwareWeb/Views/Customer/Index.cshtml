@{
    ViewBag.Title = "Home Page";
}

<h2>Клиенты</h2>
<table id="customer-table" class="table">
    <thead>
        <tr><th>Id</th><th>ФИО клиента</th></tr>
    </thead>
    <tbody id="customer-list"></tbody>
</table>

<div class="modal fade" id="addCustomer_Modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <h4 class="modal-title" id="myModalLabel">Редактирование пользователя</h4>
            </div>
            <div class="modal-body">
                <form id="customerForm">
                    <div class="form-group">
                        <label for="customerFIO_Input">ФИО пользователя</label>
                        <input type="text" class="form-control" id="customerFIO_Input" name="CustomerFIO">
                        <label hidden="hidden" for="customerId_Input">Id</label>
                        <input type="hidden" class="form-control" id="customerId_Input" name="Id">
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Закрыть окно</button>
                <button type="button" id="addCustomer_Button" class="btn btn-primary">Добавить</button>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
    $('#addCustomer_Button').click(function () {
        $.post("/api/customerRest",
            $("#customerForm").serialize(),
            function (value) {
                $("#refreshCustomer_Button").click();
            },
            "json"
        );
    });
</script>

<script>
    $(function () {
        $("#refreshCustomer_Button").click(function () {
            $.getJSON("/customer/GetAllCustomers", null, fillList);
        });
    });

    function fillList(customers) {
        $("#customer-list").text("");
        $.each(customers, function (i) {
            $("#customer-list").append(
                "<tr><td>" + this.Id + "</td>" +
                "<td>" + this.CustomerFIO + "</td></tr>"
            );
        });
    }
</script>

<button type="button" id="createCustomer_Button" data-toggle="modal" data-target="#addCustomer_Modal">Добавить</button>
<button type="button" id="editCustomer_Button" data-toggle="modal" data-target="#addCustomer_Modal">Изменить</button>
<button type="button" id="delCustomer_Button">Удалить</button>
<input type="button" id="refreshCustomer_Button" value="Обновить" />

<script>
    window.onload = function() {
        $("#refreshCustomer_Button").click();
    };
</script>



<script>
    function highlight(e) {
        if (selected[0]) selected[0].className = '';
        e.target.parentNode.className = 'selected';
    }

    var table = document.getElementById('customer-table'), selected = table.getElementsByClassName('selected');
    table.onclick = highlight;

    $(function () {
        $("#createCustomer_Button").click(function () {
            $("#customerId_Input").val("");
            $("#customerFIO_Input").val("");
        });
    });

    $(function () {
        $("#editCustomer_Button").click(function () {
            $("#customerId_Input").val($("tr.selected td:nth-child(1)").html());
            $("#customerFIO_Input").val($("tr.selected td:nth-child(2)").html());
        });
    });
</script>

<script>
    $("#delCustomer_Button").click(function () {
        var customerId = $("tr.selected td:nth-child(1)").html();
        var customerFio = $("tr.selected td:nth-child(2)").html();

        var myData = {};
        myData.Id = customerId;
        myData.CustomerFIO = customerFio;

        $.ajax({
            type: 'PUT',
            async: true,
            dataType: "json",
            url: "/api/customerRest/delete",
            data: myData,
            success: function (data) {
                $("#refreshCustomer_Button").click();
            },
            error: function (err) {
                console.log(err);
            }
        });
    });
</script>